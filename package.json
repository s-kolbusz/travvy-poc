{
  "name": "travvy",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Sebastian Kolbusz",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
